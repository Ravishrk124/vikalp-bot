# Vikalp AI Voice Tutor - Environment Variables
# Copy this file to .env and fill in your values

# ==========================================
# REQUIRED: OpenRouter API (For AI responses)
# ==========================================
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_MODEL=meta-llama/llama-3.2-3b-instruct:free

# ==========================================
# VOICE PROVIDERS
# ==========================================
# Architecture: chained (STT→LLM→TTS) or realtime (speech-to-speech)
VOICE_ARCHITECTURE=chained

# STT: openai or local_whisper
VOICE_STT_PROVIDER=local_whisper
TRANSCRIBE_MODEL=small

# LLM: openai or openrouter
VOICE_LLM_PROVIDER=openrouter

# TTS: openai or gtts
VOICE_TTS_PROVIDER=gtts

# ==========================================
# OPTIONAL: OpenAI (if using openai providers)
# ==========================================
OPENAI_API_KEY=sk-your-openai-key-here

# ==========================================
# OPTIONAL: Lead Notifications (Email)
# ==========================================
LEAD_NOTIFICATION_EMAIL=leads@yourdomain.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password