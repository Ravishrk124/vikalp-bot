# ============================================
# Vikalp AI Voice Agent - Environment Variables
# ============================================
# Copy this file to .env and fill in the values

# ============================================
# ARCHITECTURE SELECTION (Owner-controlled)
# ============================================
# Options: "chained" or "realtime"
# - chained: Audio → STT → LLM → TTS → Audio (recommended)
# - realtime: Direct speech-to-speech via OpenAI Realtime API
VOICE_ARCHITECTURE=chained

# ============================================
# OpenAI API Configuration
# ============================================
OPENAI_API_KEY=sk-your-openai-api-key-here

# STT (Speech-to-Text) Settings
STT_PROVIDER=openai
STT_MODEL=whisper-1

# LLM Settings
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o

# TTS (Text-to-Speech) Settings
TTS_PROVIDER=openai
TTS_MODEL=tts-1
TTS_VOICE=alloy

# Realtime API Settings (for realtime architecture)
REALTIME_MODEL=gpt-4o-realtime-preview
REALTIME_VOICE=alloy

# ============================================
# OpenRouter API (Fallback LLM)
# ============================================
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_MODEL=mistralai/mistral-small
OPENROUTER_BASE=https://openrouter.ai/api

# ============================================
# Local Whisper (Fallback STT)
# ============================================
TRANSCRIBE_MODEL=small

# ============================================
# Lead Notification Email
# ============================================
# Email to receive lead notifications
LEAD_NOTIFICATION_EMAIL=leads@yourdomain.com

# SMTP Configuration for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@vikalpschool.com
SMTP_FROM_NAME=Vikalp Online School

# ============================================
# Data Storage
# ============================================
# Leads will be saved to backend/data/leads.json
LEADS_FILE=data/leads.json

